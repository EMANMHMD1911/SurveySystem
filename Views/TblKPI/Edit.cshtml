@model SurveySystem.Models.TblKPI

@{
    ViewData["Title"] = "Edit";
    SelectList list = new SelectList(ViewBag.dept, "Id", "Name");

}

<h1>Edit</h1>

<h4>TblKPI</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KPIDNum" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeasurementUnit" /> @Html.DisplayNameFor(model => model.MeasurementUnit)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TargetValue" class="control-label"></label>
                <input asp-for="TargetValue" class="form-control" />
                <span asp-validation-for="TargetValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepNO" class="control-label"></label>
                <select asp-for="DepNO" asp-items="list" class="form-control" asp-items="ViewBag.DepNO"></select>
                <span asp-validation-for="DepNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
