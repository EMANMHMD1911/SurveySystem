@model SurveySystem.Models.TblKPI
@{
    ViewData["Title"] = "Create";
  SelectList list = new SelectList(ViewBag.dept, "Id", "Name");

}


<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form class="px-2" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);" asp-action="Create">
            <h3>Create New KPI</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="my-2 form-group">
                <div class="row" >
                    <div class="col-3">

                <label asp-for="Description" class="control-label"></label>
                </div>
                    <div class="col-9">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                </div>
            </div>
            
            <div class=" my-2  form-group">
                <div class="row">
                    <div class="col-3">
                <label asp-for="TargetValue" class="control-label"></label>
                    </div>
                    <div class="col-9">
                <input asp-for="TargetValue" class="form-control" />
                <span asp-validation-for="TargetValue" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-2  justify-content-center px-3 ">
            <div class="col-2  form-check">
                <input asp-for="MeasurementUnit" class="form-check-input" type="radio" value="true" />
                <label class="form-check-label">Number</label>
            </div>

            <div class="col-2 form-check">
                <input asp-for="MeasurementUnit" class="form-check-input" type="radio" value="false" />
                <label class="form-check-label">Persentage</label>
            </div>
            </div>
            <div class=" my-2  form-group">
                <div class="row">
                    <div class="col-3">
                <label asp-for="DepNO" class="control-label"></label>
                    </div>
                    <div class="col-9">
                <select asp-items="list" asp-for="DepNO" class ="form-control" asp-items="ViewBag.DepNO"></select>
                    </div>
                </div>
            </div>
            <div class=" row justify-content-center form-group">
                <input type="submit" value="Create" class=" col-2  btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
